@model DoAnWebThiTracNghiem.ViewModel.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container mx-auto flex min-h-screen items-center justify-center p-4">
    <div class="w-full max-w-md rounded-lg bg-white p-6 shadow-lg sm:p-8">
        <!-- Page Title -->
        <h2 class="mb-6 text-center text-2xl font-bold text-indigo-600 sm:text-3xl">Quên mật khẩu</h2>

        <!-- Form -->
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-5">
                <label class="mb-2 block text-sm font-medium text-gray-700">Email:</label>
                <input asp-for="Email" type="email" class="placeholder-gray-400 w-full rounded-lg border border-gray-300 p-3 transition duration-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="Nhập email của bạn" />
                <span asp-validation-for="Email" class="mt-1 block text-xs text-red-500"></span>
            </div>
            <button type="submit" class="w-full rounded-lg bg-indigo-600 py-3 font-semibold text-white transition duration-300 hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:outline-none active:bg-indigo-800">Gửi yêu cầu</button>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
