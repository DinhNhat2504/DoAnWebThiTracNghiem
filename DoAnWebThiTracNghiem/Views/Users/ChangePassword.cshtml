@model DoAnWebThiTracNghiem.ViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto flex min-h-screen items-center justify-center p-4">
    <div class="w-full max-w-md rounded-lg bg-white p-6 shadow-lg sm:p-8">
        <!-- Page Title -->
        <h2 class="mb-6 text-center text-2xl font-bold text-indigo-600 sm:text-3xl">Đổi mật khẩu</h2>

        <!-- Form -->
        <form asp-action="ChangePasswordPost" method="post">
            <div class="mb-5">
                <label for="currentPassword" class="mb-2 block text-sm font-medium text-gray-700">Mật khẩu hiện tại</label>
                <input asp-for="CurrentPassword" type="password" required class="placeholder-gray-400 w-full rounded-lg border border-gray-300 p-3 transition duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Nhập mật khẩu hiện tại" />
                <span asp-validation-for="CurrentPassword" class="mt-1 block text-xs text-red-500"></span>
            </div>
            <div class="mb-5">
                <label class="mb-2 block text-sm font-medium text-gray-700">Mật khẩu mới:</label>
                <input asp-for="NewPassword" type="password" class="placeholder-gray-400 w-full rounded-lg border border-gray-300 p-3 transition duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="NewPassword" class="mt-1 block text-xs text-red-500"></span>
            </div>
            <div class="mb-5">
                <label class="mb-2 block text-sm font-medium text-gray-700">Xác nhận mật khẩu:</label>
                <input asp-for="ConfirmPassword" type="password" class="placeholder-gray-400 w-full rounded-lg border border-gray-300 p-3 transition duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Xác nhận mật khẩu" />
                <span asp-validation-for="ConfirmPassword" class="mt-1 block text-xs text-red-500"></span>
            </div>
            <button type="submit" class="w-full rounded-lg bg-indigo-600 py-3 font-semibold text-white transition duration-300 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 active:bg-indigo-800">Đổi mật khẩu</button>
        </form>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <p style="color: green;">@TempData["Message"]</p>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

