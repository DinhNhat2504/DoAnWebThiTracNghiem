@model DoAnWebThiTracNghiem.Models.Users

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.User_Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="border-b border-gray-300 bg-gray-100">
    <div class="mx-auto flex max-w-7xl items-center gap-6 px-6 py-4">
        @if (@Html.DisplayFor(model => model.AvatarUrl)!=null)
        {
            <img alt="Man wearing a black vest over a red and blue plaid shirt, standing with hands on hips" class="h-24 w-24 rounded-lg object-cover" height="120" src="@Html.DisplayFor(model => model.AvatarUrl)" width="120" />
        }
        
        <div>
            <h1 class="text-xl leading-tight font-normal text-black lowercase">
                @Html.DisplayFor(model => model.FullName)
            </h1>
            <p class="mt-1 text-xs tracking-widest text-gray-500 uppercase">
                ID : UD9FZED1
            </p>
        </div>
        
    </div>
</div>
<main class="mx-auto max-w-7xl px-6 py-10">
    <section class="flex flex-col gap-6 md:flex-row md:justify-between md:items-start md:gap-0">
        <div class="w-full md:w-1/3">
            <p class="text-base text-black">
                Tài khoản
            </p>
        </div>
        <div class="w-full space-y-6 md:w-2/3">
            <div class="flex flex-col md:flex-row md:items-center md:gap-6">
                <p class="w-28 text-sm text-gray-500">
                    Email
                </p>
                <a class="text-sm text-black underline" href="">
                    @Html.DisplayFor(model => model.Email)
                </a>
            </div>
            <div class="flex flex-col md:flex-row md:items-center md:gap-6">
                <p class="w-28 text-sm text-gray-500">
                    Điện thoại
                </p>
                <p class="text-sm text-black">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </p>
            </div>
            <div class="flex flex-col md:flex-row md:items-start md:gap-6">
                <p class="w-28 text-sm text-gray-500">
                    Password
                </p>
                <div class="text-sm text-black">
                    <p >
                        @Html.DisplayFor(model => model.Password)
                    </p>
                    <p>
                        Thời gian tạo : @Html.DisplayFor(model => model.CreatedAt)
                    </p>
                    <p>
                        Lần thay đổi gần nhất : @Html.DisplayFor(model => model.UpdatedAt)
                    </p>
                </div>
            </div>
        </div>
    </section>
    <hr class="my-10 border-gray-300" />
    <section class="flex flex-col gap-6 md:flex-row md:justify-between md:items-start md:gap-0">
        <div class="w-full md:w-1/3">
            <p class="text-base text-black">
                Thông tin liên hệ
            </p>
        </div>
        <div class="w-full space-y-6 md:w-2/3">
            <div class="flex flex-col md:flex-row md:items-center md:gap-6">
                <p class="w-28 text-sm text-gray-500">
                    Họ và tên
                </p>
                <p class="text-sm text-black">
                    @Html.DisplayFor(model => model.FullName)
                </p>
            </div>
            <div class="flex flex-col md:flex-row md:items-center md:gap-6">
                <p class="w-28 text-sm text-gray-500">
                    Sinh nhật
                </p>
                <p class="text-sm text-black">
                    -- / -- / ----
                </p>
            </div>
            <div class="flex flex-col md:flex-row md:items-center md:gap-6">
                <p class="w-28 text-sm text-gray-500">
                    Địa chỉ
                </p>
                <p class="text-sm text-black">
                    @Html.DisplayFor(model => model.Address)
                </p>
            </div>
        </div>
    </section>
    <hr class="my-10 border-gray-300" />
</main>
