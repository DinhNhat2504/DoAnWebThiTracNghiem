@model DoAnWebThiTracNghiem.ViewModel.TeacherDashboardViewModel
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "~/Areas/Teacher/Views/Shared/_layout.cshtml";
}

<div class="container mx-auto p-6">
    <!-- Page Title -->
    <h1 class="mb-8 text-center text-3xl font-bold">Trang chủ giáo viên</h1>

    <div class="mb-8 grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-4">
        <!-- Exams -->
        <div class="flex flex-col items-center rounded-lg bg-blue-500 p-4 text-white shadow">
            <svg xmlns="http://www.w3.org/2000/svg" class="mb-2 h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m2 0a2 2 0 002-2V6a2 2 0 00-2-2H7a2 2 0 00-2 2v4a2 2 0 002 2m10 0v6a2 2 0 01-2 2H7a2 2 0 01-2-2v-6" />
            </svg>
            <div class="text-2xl font-bold">@Model.TotalExams</div>
            <div class="mt-1 text-base">Bài thi</div>
        </div>
        <!-- Classes -->
        <div class="flex flex-col items-center rounded-lg bg-green-500 p-4 text-white shadow">
            <svg xmlns="http://www.w3.org/2000/svg" class="mb-2 h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87M16 3.13a4 4 0 010 7.75M8 3.13a4 4 0 000 7.75" />
            </svg>
            <div class="text-2xl font-bold">@Model.TotalClasses</div>
            <div class="mt-1 text-base">Lớp học</div>
        </div>
        <!-- Subjects -->
        <div class="flex flex-col items-center rounded-lg bg-purple-500 p-4 text-white shadow">
            <svg xmlns="http://www.w3.org/2000/svg" class="mb-2 h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2" />
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none" />
            </svg>
            <div class="text-2xl font-bold">@Model.TotalSubjects</div>
            <div class="mt-1 text-base">Môn học</div>
        </div>
        <!-- Questions -->
        <div class="flex flex-col items-center rounded-lg bg-yellow-500 p-4 text-white shadow">
            <svg xmlns="http://www.w3.org/2000/svg" class="mb-2 h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16h6m2 0a2 2 0 002-2V6a2 2 0 00-2-2H7a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            <div class="text-2xl font-bold">@Model.TotalQuestions</div>
            <div class="mt-1 text-base">Câu hỏi</div>
        </div>
    </div>
    </div>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
        <div>
            <div class="mb-4 flex items-center justify-between">
                <h2 class="text-2xl font-semibold">Bài thi gần đây</h2>
                <a href="~/Teacher/Exam/Index" class="rounded border border-blue-500 px-3 py-1 text-sm font-medium text-blue-600 transition hover:underline hover:bg-blue-50">View More</a>
            </div>
            <ul class="space-y-4">
                @foreach (var exam in Model.RecentExams)
                {
                    <li class="flex flex-col rounded-lg bg-white p-4 shadow">
                        <span class="text-lg font-bold">@exam.Exam_Name</span>
                        <span class="text-sm text-gray-500">Date: @exam.Exam_Date.ToString("dd/MM/yyyy")</span>
                    </li>
                }
            </ul>
        </div>
        <div>
            <div class="mb-4 flex items-center justify-between">
                <h2 class="text-2xl font-semibold">Lớp học gần đây</h2>
                <a href="~/Teacher/ClassTn/Index" class="rounded border border-green-500 px-3 py-1 text-sm font-medium text-green-600 transition hover:underline hover:bg-green-50">View More</a>
            </div>
            <ul class="space-y-4">
                @foreach (var cls in Model.RecentClasses)
                {
                    <li class="flex flex-col rounded-lg bg-white p-4 shadow">
                        <span class="text-lg font-bold">@cls.ClassName</span>
                        <span class="text-sm text-gray-500">Created: @cls.CreatedAt.ToString("dd/MM/yyyy")</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

