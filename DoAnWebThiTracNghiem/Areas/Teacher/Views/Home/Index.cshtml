@model DoAnWebThiTracNghiem.ViewModel.TeacherDashboardViewModel
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "~/Areas/Teacher/Views/Shared/_layout.cshtml";
}


<div class="container mx-auto p-4">
    <!-- Page Title -->
    <h1 class="mb-6 text-center text-lg font-semibold text-indigo-600 sm:text-2xl">Trang chủ giáo viên</h1>

    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-4">
        <!-- Exams -->
        <div class="bg-gradient-to-r flex flex-col items-center justify-center rounded-lg from-blue-400 to-blue-600 p-2 text-white shadow-md transition-all duration-300 hover:shadow-lg hover:scale-105 active:scale-95">
            <a href="~/Teacher/Exam/Index">
                <svg class="mb-1 h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-3-3v6m3-9V7m-6 4v6m3-9v6m-6 4v2m3-7v6m-3-3h6"></path>
                </svg>
                <div class="text-base font-bold sm:text-lg">@Model.TotalExams</div>
                <div class="text-xs sm:text-sm">Bài thi</div>
            </a>
        </div>
        <!-- Classes -->
        <div class="bg-gradient-to-r flex flex-col items-center justify-center rounded-lg from-green-400 to-green-600 p-2 text-white shadow-md transition-all duration-300 hover:shadow-lg hover:scale-105 active:scale-95">
            <a href="~/Teacher/ClassTn/Index">
                <svg class="mb-1 h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-3-3H6l-2 2m10-8V7a4 4 0 00-8 0v4H6a2 2 0 00-2 2v4a2 2 0 002 2h10a2 2 0 002-2v-4a2 2 0 00-2-2z"></path>
                </svg>
                <div class="text-base font-bold sm:text-lg">@Model.TotalClasses</div>
                <div class="text-xs sm:text-sm">Lớp học</div>
            </a>
        </div>
        <!-- Subjects -->
        <div class="bg-gradient-to-r flex flex-col items-center justify-center rounded-lg from-purple-400 to-purple-600 p-2 text-white shadow-md transition-all duration-300 hover:shadow-lg hover:scale-105 active:scale-95">
            <a href="~/Teacher/Subject/Index">
                <svg class="mb-1 h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                <div class="text-base font-bold sm:text-lg">@Model.TotalSubjects</div>
                <div class="text-xs sm:text-sm">Môn học</div>
            </a>
        </div>
        <!-- Questions -->
        <div class="bg-gradient-to-r flex flex-col items-center justify-center rounded-lg from-yellow-400 to-yellow-600 p-2 text-white shadow-md transition-all duration-300 hover:shadow-lg hover:scale-105 active:scale-95">
            <a href="~/Teacher/Questions/Index">
                <svg class="mb-1 h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="white" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M9 16h6"></path>
                </svg>
                <div class="text-base font-bold sm:text-lg">@Model.TotalQuestions</div>
                <div class="text-xs sm:text-sm">Câu hỏi</div>
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <div class="rounded-lg bg-white p-3 shadow-md">
            <div class="mb-3 flex items-center justify-between">
                <h2 class="text-base font-semibold text-gray-800 sm:text-lg">Bài thi gần đây</h2>
                <a href="~/Teacher/Exam/Index" class="rounded-full bg-blue-100 px-2 py-1 text-xs font-medium text-blue-600 transition duration-300 hover:bg-blue-200 sm:text-sm sm:px-3 sm:py-1">Xem thêm</a>
            </div>
            <ul class="space-y-2">
                @foreach (var exam in Model.RecentExams)
                {
                    <li class="w-full max-w-full rounded-lg bg-gray-50 p-2 shadow-sm transition duration-300 hover:bg-gray-100">
                        <a asp-controller="Exam" asp-action="ManageExam" asp-route-examId="@exam.Exam_ID">
                            <span class="block truncate overflow-hidden text-sm font-bold text-ellipsis whitespace-nowrap text-gray-900 sm:text-base">
                                @exam.Exam_Name
                            </span>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="rounded-lg bg-white p-3 shadow-md">
            <div class="mb-3 flex items-center justify-between">
                <h2 class="text-base font-semibold text-gray-800 sm:text-lg">Lớp học gần đây</h2>
                <a href="~/Teacher/ClassTn/Index" class="rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-600 transition duration-300 hover:bg-green-200 sm:text-sm sm:px-3 sm:py-1">Xem thêm</a>
            </div>
            <ul class="space-y-2">
                @foreach (var cls in Model.RecentClasses)
                {
                    <li class="w-full max-w-full rounded-lg bg-gray-50 p-2 shadow-sm transition duration-300 hover:bg-gray-100">
                        <a asp-controller="ClassTn" asp-action="Details" asp-route-classId="@cls.Class_Id">
                            <span class="block truncate overflow-hidden text-sm font-bold text-ellipsis whitespace-nowrap text-gray-900 sm:text-base">
                                @cls.ClassName
                            </span>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="rounded-lg bg-white p-3 shadow-md">
            <div class="mb-3 flex items-center justify-between">
                <h2 class="text-base font-semibold text-gray-800 sm:text-lg">Câu hỏi gần đây</h2>
                <a href="~/Teacher/Question/Index" class="rounded-full bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-600 transition duration-300 hover:bg-yellow-200 sm:text-sm sm:px-3 sm:py-1">Xem thêm</a>
            </div>
            <ul class="space-y-2">
                @foreach (var qs in Model.RecentQuestion)
                {
                    <li class="w-full max-w-full rounded-lg bg-gray-50 p-2 shadow-sm transition duration-300 hover:bg-gray-100">
                        
                            <span class="block truncate overflow-hidden text-sm font-bold text-ellipsis whitespace-nowrap text-gray-900 sm:text-base">
                                @qs.Question_Content
                            </span>
                       
                    </li>
                }
            </ul>
        </div>
        <div class="rounded-lg bg-white p-3 shadow-md">
            <div class="mb-3 flex items-center justify-between">
                <h2 class="text-base font-semibold text-gray-800 sm:text-lg">Môn học gần đây</h2>
                <a href="~/Teacher/Subjects/Index" class="rounded-full bg-purple-100 px-2 py-1 text-xs font-medium text-purple-600 transition duration-300 hover:bg-purple-200 sm:text-sm sm:px-3 sm:py-1">Xem thêm</a>
            </div>
            <ul class="space-y-2">
                @foreach (var sb in Model.RecentSubject)
                {
                    <li class="w-full max-w-full rounded-lg bg-gray-50 p-2 shadow-sm transition duration-300 hover:bg-gray-100">
                        
                            <span class="block truncate overflow-hidden text-sm font-bold text-ellipsis whitespace-nowrap text-gray-900 sm:text-base">
                                @sb.Subject_Name
                            </span>
                        
                    </li>
                }
            </ul>
        </div>
    </div>
</div>



