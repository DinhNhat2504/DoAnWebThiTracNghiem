@model IEnumerable<DoAnWebThiTracNghiem.Models.Student_Class>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_layout.cshtml";
}


<h2>Danh sách sinh viên</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên sinh viên</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User?.FullName</td>
                <td>@item.User?.Email</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.SC_ID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

