@model IEnumerable<DoAnWebThiTracNghiem.Models.Exam>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exam_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalQuestions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exam_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Exam_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalQuestions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exam_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator.User_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Subject_Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Exam_ID">Edit</a> |
                    <a href="@Url.Action("AddQuestions", "Exam", new { area = "Teacher", examId = @item.Exam_ID })" class="btn btn-primary">
                        Thêm câu hỏi
                    </a> |
                    <a href="@Url.Action("ViewQuestions", "Exam", new { area = "Teacher", examId = @item.Exam_ID })" class="btn btn-info">
                        Xem danh sách câu hỏi
                    </a>|
                    <a href="@Url.Action("AssignExam", "Exam", new { area = "Teacher", examId = @item.Exam_ID })" class="btn btn-info">
                        Giao bài thi
                    </a>|
                    <a asp-action="Delete" asp-route-id="@item.Exam_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
