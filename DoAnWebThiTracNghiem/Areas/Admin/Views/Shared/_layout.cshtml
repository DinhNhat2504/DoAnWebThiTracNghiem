<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoAnWebThiTracNghiem.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="flex bg-gray-100">
    <!-- Sidebar -->
    <div id="sidebar" class="fixed top-0 left-0 z-50 flex h-full w-full max-w-screen-2xl -translate-x-full transform flex-col bg-white text-black transition-transform duration-300 ease-in-out md:w-64 md:translate-x-0">
        <!-- Logo and Close Button -->
        <div class="flex items-center justify-between p-4">
            <img src="~/images/Logo-removebg.png" alt="NQuiz Logo" class="h-10 w-auto">
            <button id="closeMenu" class="text-black focus:outline-none md:hidden">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <!-- Navigation -->
        <nav class="flex-1">
            <a asp-action="Index" asp-controller="Home" class="flex items-center px-4 py-2 text-lg hover:bg-gray-300">
                <svg class="stroke-current mr-3 h-6 w-6 text-green-600" fill="none"  viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Trang chủ
            </a>
            <a asp-action="Index" asp-controller="Users" class="flex items-center px-4 py-2 text-lg hover:bg-gray-300">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                Người dùng
            </a>
            <details class="group" id="quizDetails">
                <summary class="flex cursor-pointer items-center px-4 py-2 text-lg hover:bg-gray-300" id="quizDropdown">
                    <svg class="stroke-current mr-3 h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    Trắc nghiệm
                    <svg class="stroke-current ml-2 h-5 w-5 text-black transition-transform duration-300 group-open:-rotate-180" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </summary>
                <div class="bg-white text-black">
                    <a href="/Admin/Exams/Index" class="quiz-item flex items-center px-8 py-2 text-lg text-black hover:bg-gray-300" data-controller="Exams" data-action="Index" data-active="false">
                        <svg class="stroke-current mr-2 h-5 w-5 text-purple-600" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m-6 6h12"></path>
                        </svg>
                        Đề thi
                    </a>
                    <a href="/Admin/Questions/Index" class="quiz-item flex items-center px-8 py-2 text-lg text-black hover:bg-gray-300" data-controller="Questions" data-action="Index" data-active="false">
                        <svg class="stroke-current mr-2 h-5 w-5 text-purple-600" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Câu hỏi
                    </a>
                </div>
            </details>
            <div>
                <a asp-action="Index" asp-controller="ClassTn" class="flex items-center px-4 py-2 text-lg hover:bg-gray-300">
                    <svg class="stroke-current mr-3 h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
                    </svg>
                    Lớp học
                </a>
            </div>
            <a asp-action="Index" asp-controller="Subjects" class="flex items-center px-4 py-2 text-lg hover:bg-gray-300">
                <svg class="stroke-current mr-3 h-6 w-6 text-orange-600" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                Môn học
            </a>
            <a asp-action="Index" asp-controller="Statistics" class="flex items-center px-4 py-2 text-lg hover:bg-gray-300">
                <svg class="stroke-current mr-3 h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
                </svg>
                Thống kê
            </a>
        </nav>
        <!-- Log out -->
        <div class="border-t border-black p-4">
            <a asp-action="Logout" asp-controller="Home" class="flex items-center px-4 py-2 text-lg hover:bg-gray-300">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                Log out
            </a>
        </div>
    </div>
    <!-- Main Content -->
    <div class="main-content flex w-full flex-1 flex-col md:ml-64">
        <!-- Header -->
        @await Component.InvokeAsync("AvatarDropDown")
        <!-- Content Area -->
        <main class="flex-1 p-6">
            <div class="h-full rounded-lg border border-gray-200 bg-white shadow">
                
                    @RenderBody()
                
            </div>
        </main>
    </div>

    <script>
       // Set details state and active item based on URL
        window.addEventListener('DOMContentLoaded', () => {
            const path = window.location.pathname.toLowerCase();
            const quizDetails = document.getElementById('quizDetails');
            const quizItems = document.querySelectorAll('.quiz-item');

            if (path.includes('/admin/exams/') || path.includes('/admin/questions/')) {
                quizDetails.setAttribute('open', '');
                quizItems.forEach(item => {
                    const controller = item.getAttribute('data-controller').toLowerCase();
                    const action = item.getAttribute('data-action').toLowerCase();
                    const itemUrl = `/${controller}/${action}`.toLowerCase();
                    if (path.includes(itemUrl)) {
                        item.classList.add('bg-gray-100');
                    } else {
                        item.classList.remove('bg-gray-100');
                    }
                });
            }
        });

        // Toggle sidebar on mobile
        document.getElementById('menuToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            sidebar.classList.toggle('translate-x-0');
            sidebar.classList.toggle('-translate-x-full');
            mainContent.classList.toggle('hidden');
        });

        // Close sidebar on mobile
        document.getElementById('closeMenu').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            sidebar.classList.remove('translate-x-0');
            sidebar.classList.add('-translate-x-full');
            mainContent.classList.remove('hidden');
        });

        // Handle window resize to ensure main content is visible on larger screens
        window.addEventListener('resize', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            if (window.innerWidth >= 768) {
                sidebar.classList.remove('translate-x-0');
                sidebar.classList.add('-translate-x-full');
                mainContent.classList.remove('hidden');
            }
        });

    </script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>